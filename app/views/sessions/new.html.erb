<% provide(:title, "ログイン") %>
<h1>ログイン</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :email, "メールアドレス" %><br>
      <%= f.email_field :email, class: 'form-control' %><br>
      todo ユーザー名でログインできるようにする<br>
      <%= f.label :name, "ユーザーID" %><br>
      <%= f.email_field :name, class: 'form-control' %><br>

      <%= f.label :password, "パスワード" %><br>
      <%= f.password_field :password, class: 'form-control', autocomplete: 'off' %><br>

      <%= f.submit "ログインする", class: "btn" %><br>
    <% end %>

  </div>
</div>
